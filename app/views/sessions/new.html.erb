<h2>Log in or sign up to manage your recipes and clients!</h1>
<%= form_for @user, url: login_path, method: :post do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :password %>
  <%= f.password_field :password %>

  <%= f.submit "Log In" %> 
  <br>
  <br> Or <%= link_to(controller: 'users', action: 'new') { button_to "Sign Up" } %>
<% end %>