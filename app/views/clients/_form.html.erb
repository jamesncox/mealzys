<%= form_for @client do |f| %>

    <% if @client.errors.any? %>
        <% @client.errors.full_messages.each do |msg| %>
            <%= msg %>
        <% end %>
    <% end %>

    <p><%= f.label :name, "Client Name: "%>
    <%= f.text_field :name %></p>

    <%= f.fields_for :restrictions do |r|  %>
       
       <br><%= r.label :name, "Restriction: " %>
       
       <%= r.collection_select(:name, Restriction.all, :name, :name, :include_blank => true) %>

    <% end %>

    <%= f.fields_for :restrictions do |r|  %>
       
        <br><%= r.label :name, "Restriction: " %>
         <%= r.text_field :name %>
         
     <% end %>

    <p><%= f.submit %></p>
<% end %>